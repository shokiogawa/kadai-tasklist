<% if logged_in? %>

 <h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
     <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>
</ul>

<%= link_to "新規タスクを追加", new_task_path %>
 
<% else %>
<div class-"center">
 <div class="text-center">
  <%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
 </div>
</div>


<% end %>
